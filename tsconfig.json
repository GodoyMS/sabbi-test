{

  "compilerOptions": {
    "module": "NodeNext",
     "target": "ES2015",
    "lib": ["ES2015", "DOM"], 
    "moduleResolution":"nodenext",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata":true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
  },
    "include": ["src"]

     
}
